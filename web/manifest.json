{
  "manifest_version": 2,
  "default_locale": "en",

  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "1.0",

  "icons": {
    "48": "src/images/icon-48.png",
    "96": "src/images/icon-96.png",
    "128": "src/images/icon-128.png",
    "256": "src/images/icon-256.png",
    "512": "src/images/icon-512.png"
  },

  "background": {
    "scripts": ["src/browser-polyfill.js", "src/index.js"]
  },

  "content_scripts": [
    { "matches": ["*://*.piny.link/*"], "js": ["src/piny.js"] }
  ],

  "browser_action": {
    "default_title": "__MSG_extension_action__",
    "default_icon": {
      "16": "src/images/toolbar-icon-16.png",
      "19": "src/images/toolbar-icon-19.png",
      "32": "src/images/toolbar-icon-32.png",
      "38": "src/images/toolbar-icon-38.png"
    }
  },

  "options_ui": {
    "page": "src/options.html"
  },

  "permissions": ["activeTab", "contextMenus", "storage"]
}
