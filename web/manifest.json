{
  "manifest_version": 2,
  "default_locale": "en",

  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "1.0",

  "icons": {
    "48": "src/images/icon-48.png",
    "96": "src/images/icon-96.png",
    "128": "src/images/icon-128.png",
    "256": "src/images/icon-256.png",
    "512": "src/images/icon-512.png"
  },

  "background": {
    "scripts": [ "src/background.js" ]
  },

  "content_scripts": [{
    "js": [ "src/content.js" ],
    "matches": [ "*://example.com/*" ]
  }],

  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/images/toolbar-icon-16.png",
      "19": "src/images/toolbar-icon-19.png",
      "32": "src/images/toolbar-icon-32.png",
      "38": "src/images/toolbar-icon-38.png"
    }
  },

  "permissions": [ ]
}
